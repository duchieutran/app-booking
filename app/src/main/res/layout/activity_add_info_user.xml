<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Activities.AddInfoUserActivity">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/imgAvata"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Avatar" />


    <!-- Form đăng nhập -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imgAvata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tên đăng nhập -->
        <EditText
            android:id="@+id/edtTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/username"
            android:drawablePadding="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:hint="Tên đăng nhập"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <!-- Mật khẩu -->
        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/password"
            android:drawablePadding="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:hint="Mật khẩu"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />
        <!-- Họ và tên -->
        <EditText
            android:id="@+id/edtHoVaTen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/name"
            android:drawablePadding="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:hint="Họ và tên"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />
        <!--Email -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/email"
            android:drawablePadding="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:hint="Email"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />
        <!-- Số điện thoại -->
        <EditText
            android:id="@+id/edtSDT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/sdt"
            android:drawablePadding="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:hint="Số điện thoại"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />
        <!--Địa chỉ -->
        <EditText
            android:id="@+id/edtDiaChi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/address"
            android:drawablePadding="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:hint="Địa chỉ"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <!-- Nút Lưu thay đổi -->
        <Button
            android:id="@+id/btnLuuThayDoi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_btn_background"
            android:text="Lưu thay đổi"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Hình nền đáy -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/back_bottom" />
</androidx.constraintlayout.widget.ConstraintLayout>